<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:background="@drawable/activity_background"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/round_text"
        android:layout_height="214dp"
        android:padding="8dp">

        <TextView
            android:id="@+id/advert_title"
            android:background="@drawable/round_text"
            android:layout_width="133dp"
            android:layout_height="46dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Title"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/advert_price"
            android:background="@drawable/round_text"
            android:layout_width="63dp"
            android:layout_height="40dp"
            android:layout_below="@id/advert_title"
            android:layout_alignParentStart="true"
            android:layout_marginStart="158dp"
            android:layout_marginTop="105dp"
            android:text="price" />

        <TextView
            android:id="@+id/advert_quality"
            android:background="@drawable/round_text"
            android:layout_width="92dp"
            android:layout_height="38dp"
            android:layout_alignLeft="@id/advert_price"
            android:layout_alignParentStart="true"
            android:layout_marginStart="132dp"
            android:layout_marginLeft="-34dp"
            android:layout_marginTop="0dp"
            android:text="quality" />

        <TextView
            android:id="@+id/advert_description"
            android:background="@drawable/round_text"
            android:layout_width="134dp"
            android:layout_height="125dp"
            android:layout_below="@id/advert_title"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:text="description" />

        <ImageView
            android:id="@+id/advert_image"
            android:background="@drawable/round_text"
            android:layout_width="147dp"
            android:layout_height="206dp"
            android:layout_below="@id/advert_description"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="4dp" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>